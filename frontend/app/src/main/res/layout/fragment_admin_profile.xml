<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Image de l'avatar de l'utilisateur -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/user12"
        android:contentDescription="Avatar"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circular_border" /> <!-- Ajouter un fond arrondi à l'image -->

    <!-- Titre du profil -->
    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Administrateur"
        android:textSize="28sp"
        android:textColor="#22177A"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="24dp" />

    <!-- Affichage du nom de l'administrateur -->
    <TextView
        android:id="@+id/adminNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        style="@style/TitleTextStyle"
    android:paddingBottom="12dp" />



    <!-- Affichage des valeurs du nom et email -->
    <TextView
        android:id="@+id/adminNameValueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        style="@style/ValueTextStyle"
    android:paddingBottom="12dp" />



    <!-- Bouton pour éditer le profil -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Éditer le Profil"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/colorPrimary" />
</LinearLayout>
