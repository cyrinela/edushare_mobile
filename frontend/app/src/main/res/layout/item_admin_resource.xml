<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/resourceNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NomRessource"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/resourceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description de la ressource"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveStatusButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/ic_check_circle"
        android:contentDescription="Enregistrer"
        android:drawableTint="#4CAF50" />
</LinearLayout>
